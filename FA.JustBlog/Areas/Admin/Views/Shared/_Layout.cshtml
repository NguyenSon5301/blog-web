                        <div class="nav">
                            <div class="sb-sidenav-menu-heading">Management</div>
                            <a class="nav-link" asp-area="Admin" asp-controller="Post" asp-action="Index">
                                <div  class="sb-nav-link-icon"><i class="bi bi-file-post"></i></div>
